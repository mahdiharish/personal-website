---
import education from "@/data/education";
---

<div class="flex-col gap-4">
  <h2 class="text-neutral-100 text-2xl">Education</h2>
  {
    education.map((edu) => (
      <div class="flex flex-col gap-2 pt-4 pb-3 rounded-md">
        <h3 class="text-neutral-100 text-xl font-semibold">{edu.title}</h3>
        <p class="text-neutral-100">{edu.institution}</p>
        <p class="text-neutral-100">{edu.educationTime}</p>
        <p class="text-neutral-100">{edu.description}</p>
      </div>
    ))
  }
</div>
