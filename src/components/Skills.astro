---
import skill from "@/data/skills";
import { Image } from "astro:assets";
---

<div class="flex-col gap-4">
  <h2 class="text-neutral-100 text-2xl mb-4">Technical Skills</h2>
  <div class="flex flex-col gap-4">
    <div>
      <h3 class="text-neutral-100 text-xl font-semibold">
        Programming Language
      </h3>
      <div class="flex flex-row gap-4 max-md:grid max-md:grid-cols-2">
        {
          skill
            .filter((s) => s.type === "lang")
            .map((skill) => (
              <div class="flex flex-col gap-2 pt-4 pb-3 rounded-md">
                <img class="w-24 h-24" src={skill.image} alt={skill.tech} />
                <h4 class="text-neutral-100 text-center">{skill.tech}</h4>
                <p class="text-neutral-100 text-center">{skill.level}</p>
              </div>
            ))
        }
      </div>
    </div>
  </div>
  <div>
    <h3 class="text-neutral-100 text-xl font-semibold">
      Front-end Development
    </h3>
    <div class="flex flex-row gap-4">
      {
        skill
          .filter((s) => s.type === "frontend")
          .map((skill) => (
            <div class="flex flex-col gap-2 pt-4 pb-3 rounded-md">
              <img class="w-24 h-24" src={skill.image} alt={skill.tech} />
              <h4 class="text-neutral-100 text-center">{skill.tech}</h4>
              <p class="text-neutral-100 text-center">{skill.level}</p>
            </div>
          ))
      }
    </div>
  </div>
  <div>
    <h3 class="text-neutral-100 text-xl font-semibold">Back-end Development</h3>
    <div class="flex flex-row gap-4">
      {
        skill
          .filter((s) => s.type === "backend")
          .map((skill) => (
            <div class="flex flex-col gap-2 pt-4 pb-3 rounded-md">
              <img class="w-24 h-24" src={skill.image} alt={skill.tech} />
              <h4 class="text-neutral-100 text-center">{skill.tech}</h4>
              <p class="text-neutral-100 text-center">{skill.level}</p>
            </div>
          ))
      }
    </div>
  </div>
</div>
